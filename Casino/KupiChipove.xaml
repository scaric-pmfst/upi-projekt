<Window x:Class="Casino.KupiChipove"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casino"
        mc:Ignorable="d"
        Title="Kupi čipove" Height="250" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,10,10">
        <Button x:Name="Kupi" Content="Kupi čipove" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold" Click="Kupi_Click" />
        <TextBox x:Name="KupljeniChipovi" HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" FontSize="20" TextAlignment="Center"/>
        <Label Content="Unesite koliko želite čipova kupiti." HorizontalAlignment="Center" Margin="0,30,0,0"  VerticalAlignment="Top" FontSize="18" FontStyle="Italic" FontWeight="Bold"/>
    </Grid>
</Window>
